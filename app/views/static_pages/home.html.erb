<%= form_with url: static_pages_result_url, local: true do |form| %>
  <%= render 'shared/error_messages' %>
  
  <%= form.select :gender, { "男": "male", "女": "female" }, {prompt: "性別を選択"}, { class: "selectbox" } %>
  <br><br>
  <%= form.telephone_field :height, placeholder: "身長を入力", class: 'form-control' %>
  <br><br>
  <%= form.telephone_field :weight, placeholder: "体重を入力", class: 'form-control' %>
  <br><br>
  <%= form.telephone_field :old, placeholder: "年齢を入力", class: 'form-control' %>
  <br><br>
  <%= form.select :activity, { "低い": "low", "まあまあ": "mid", "高い": "high" }, {prompt: "アクティブ度を選択"}, { class: "selectbox" } %>
  <br><br>
  <%= form.select :purpose, { "減量": "loss", "維持": "maintenance", "増量": "increase" }, {prompt: "目的を選択"}, { class: "selectbox" } %>
  <br><br>
  <%= form.submit "計算する", class: 'result-button'  %>
<% end %>
